@model IEnumerable<Jobs.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info">
    <h3>مرحبا بك عزيزي الزائر</h3>
    <p>مرحبا بك في فضاء البحث عن الوظائف باختلاف أصنافها، يمكنك نشر وظيفة إن كنت ناشرا، ويمكنك التقدم للوظيفة إذا كنت باحثا عن شغل</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>


@foreach (var item in Model)
{
    <div class="panel panel-info">
        <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.Name)</h1></div>

        <div class="row panel-body">
            <h5>@Html.DisplayFor(modelItem => item.Description)</h5>
            @if (item.Jobs == null)
            {
                continue;
            }
            else
            {


                @foreach (var subItem in item.Jobs)
                {
                    <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; min-height:380px;">
                        @*<img src="~/images/@Html.DisplayFor(model=>item.Image)"
            class="thumbnail" style="width:48px; height:48px" />*@
                        <img src="~/images/@subItem.Image" />
                        <h3>@Html.DisplayFor(modelItem => subItem.Title)</h3>
                        <h5>@Html.DisplayFor(modelItem => subItem.Content)</h5>
                            @*@Html.Raw(System.Net.WebUtility.HtmlDecode(blablabla.ToString()))*@
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">تفاصيل</a>
                    </div>
                }
            }
        </div>
    </div>
}
