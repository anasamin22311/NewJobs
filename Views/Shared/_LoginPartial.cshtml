@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a style="margin: 8px 341px 4px -248px" class="nav-link text-dark loginP" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" style="margin: 10px 265px 4px -335px" class="nav-link btn btn-link text-dark signupP">Logout</button>
        </form>
    </li>
}
else
{
    @*nav navbar-nav navbar-right*@
        <ul class="nav navbar-nav navbar-right">
    <li >
                <a asp-area="Identity" asp-page="/Account/Login"class="loginP">تسجيل الدخول</a>
    </li>
    <li >
                <a  asp-area="Identity" asp-page="/Account/Register"
               class="signupP">اشتراك</a>
    </li>
</ul>
}
